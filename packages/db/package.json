{
  "name": "@taiyo/db",
  "version": "0.1.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "push": "drizzle-kit push:pg",
    "clear": "pnpm with-env tsx clear.ts",
    "seed": "pnpm clear && pnpm push && pnpm with-env tsx seed.ts",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.6.0",
    "drizzle-orm": "^0.28.5",
    "tsx": "^3.12.8"
  },
  "devDependencies": {
    "@taiyo/eslint-config": "^0.2.0",
    "@taiyo/prettier-config": "^0.1.0",
    "@taiyo/tsconfig": "^0.1.0",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@taiyo/eslint-config/base"
    ]
  },
  "prettier": "@taiyo/prettier-config"
}
