{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "BETTER_AUTH_URL",
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_DISCORD_ID",
    "BETTER_AUTH_DISCORD_SECRET",
    "MEILISEARCH_ADMIN_KEY",
    "DRAGONFLY_URL",
    "S3_URL",
    "S3_ACCESS_KEY_ID",
    "S3_SECRET_ACCESS_KEY",
    "S3_CDN_BUCKET_NAME",
    "S3_UPLOADS_BUCKET_NAME",
    "CLICKHOUSE_URL",
    "UMAMI_USER_ID",
    "UMAMI_SECRET",
    "GRAFANA_USERNAME",
    "GRAFANA_PASSWORD",
    "GRAFANA_LOKI_URL"
  ],
  "globalPassThroughEnv": ["NODE_ENV", "CI", "npm_lifecycle_event"]
}
